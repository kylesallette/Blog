<h1> Create a new article </h1>
<% if @article.errors.any? %>
<ul>
  <% @article.errors.full_messages.each do |msg|  %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
<%= form_for @article do |f| %>
<%= f.label :title %><br>
<%= f.text_field :title %><br>
<%= f.label :description  %><br>
<%= f.text_area :description %><br>
<%= f.submit %>


<% end %>
